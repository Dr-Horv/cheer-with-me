<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/main_container">


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/icons_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
    >
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_beer"
                android:backgroundTint="@color/beer"
                android:background="@drawable/button_bg_round"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_wine"
                android:backgroundTint="@color/wine"
                android:background="@drawable/button_bg_round"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                />
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_coffee"
                android:backgroundTint="@color/coffee"
                android:background="@drawable/button_bg_round"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"/>
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_whiskey"
                android:backgroundTint="@color/whiskey"
                android:background="@drawable/button_bg_round"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_cocktail"
                android:backgroundTint="@color/cocktail"
                android:background="@drawable/button_bg_round"
                android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:textSize="45sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_wineBottle"
                android:background="@drawable/button_bg_round"
                android:backgroundTint="@color/wineBottle"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>