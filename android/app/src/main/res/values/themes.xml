<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CheerWithMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/dark</item>
        <item name="backgroundColor">@color/dark</item>
        <item name="background">@color/dark</item>
        <item name="colorSurface">@color/dark</item>
        <item name="colorPrimary">@color/beerYellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- <item name="colorOnBackground">@color/lightDark</item> -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CheerWithMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CheerWithMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CheerWithMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorAccent">@color/beerYellow</item>
    </style>
</resources>